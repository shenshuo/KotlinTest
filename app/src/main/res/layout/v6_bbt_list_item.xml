            <TextView
                android:id="@+id/tv_new_user"
                android:layout_width="102px"
                android:layout_height="53px"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/img_pl_reward"
                android:layout_marginLeft="23px"
                android:gravity="center"
                android:text="预约"
                android:textColor="@color/v6reward_text"
                android:textSize="32px"
                 />
            <TextView
                android:id="@+id/tv_lable"
                android:layout_width="wrap_content"
                android:layout_height="53px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="22px"
                android:layout_gravity="center_vertical"
                android:background="@drawable/v6_new_user"
                android:layout_toRightOf="@id/tv_new_user"
                android:gravity="center"
                android:visibility="gone"
                android:paddingLeft="10px"
                android:paddingRight="10px"
                android:paddingTop="5px"
                android:paddingBottom="5px"
                android:textColor="@color/white"
                android:textSize="32px" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100px" >

            <LinearLayout
                android:id="@+id/li_rate"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"

                android:layout_alignParentBottom="true"
                android:layout_marginLeft="61px"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/conduct_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="bottom"
                    android:text="6.00"
                    android:textColor="@color/v6index_text"
                    android:textSize="79px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="bottom"
                    android:text="%"
                    android:textColor="@color/v6index_text"
                    android:textSize="41px" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/li_jiaxi"
                android:layout_width="150px"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="7px"
                android:layout_toRightOf="@id/li_rate"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="+"
                    android:textColor="@color/v6index_text"
                    android:textSize="40px" />

                <TextView
                    android:id="@+id/home_rateadd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:textColor="@color/v6index_text"
                    android:textSize="40px" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/li_redjiaxi"
                android:layout_width="200px"
                android:layout_height="120px"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/li_rate"
                android:background="#f00"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/home_redrateadd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="27px"
                    android:textColor="#fff"
                    android:textSize="40px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="加息"
                    android:textColor="#fff"
                    android:textSize="20px" />
            </LinearLayout>
     <LinearLayout
         android:layout_alignParentBottom="true"
         android:layout_centerHorizontal="true"
         android:layout_centerVertical="true"
         android:layout_marginLeft="20px"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
         <TextView
             android:id="@+id/conduct_time"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="5px"
             android:textColor="@color/bbt_v4_main_moren"

             android:textSize="54px" />
         <TextView
             android:id="@+id/tv_unit_time"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/v6_gray"
             android:layout_marginLeft="8px"
             android:textSize="32px"/>

     </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="61px"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/conduct_investAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8000000元"
                    android:textColor="@color/bbt_v4_main_moren"
                    android:textSize="54px" />

                <TextView
                    android:id="@+id/tv_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8px"
                    android:text="万元"
                    android:textColor="@color/v6_gray"
                    android:textSize="32px" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45px"
            android:layout_marginTop="10px" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="61px"
                android:textColor="#999999"
                android:textSize="30px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="61px"
                android:text="期限"
                android:textColor="#999999"
                android:textSize="30px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="61px"
                android:text="剩余可出借金额"
                android:textColor="#999999"
                android:textSize="30px" />
        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>